<mx:VBox 
	xmlns:mx="http://www.adobe.com/2006/mxml"
	xmlns="weave.editors.*"
	verticalScrollPolicy="off"
	horizontalScrollPolicy="off"
	creationPolicy="all"
	implements="weave.api.ui.ILinkableObjectEditor"
	>
	<mx:Label id="editorTitle" fontWeight="bold" text="{_weaveDataSource ? 'Edit' : 'Add'} Weave Data Source"/>
	<mx:HBox>
		<mx:Label text="Source Name *" width="120"/>
		<mx:TextInput id="sourceName" width="200" cornerRadius="5" borderStyle="solid"/><!--rounded corners don't work if borderstyle is not mentioned-->
	</mx:HBox>
	<mx:HBox>
		<mx:Label text="{lang('Source URL')}" width="120"/>
		<mx:TextInput id="url" width="300" cornerRadius="5" borderStyle="solid"/>
	</mx:HBox>
	<mx:Spacer height="20"/>
	<mx:Label text="* = required"/>
	<mx:Script>
		<![CDATA[
			import mx.controls.Alert;
			
			import weave.Weave;
			import weave.api.core.ILinkableObject;
			import weave.data.DataSources.WeaveDataSource;
			
			override protected function createChildren():void
			{
				super.createChildren();
				
				sourceName.text = Weave.root.generateUniqueName("WeaveDataSource");
			}
			
			[Bindable] private var _weaveDataSource:WeaveDataSource = null;
			
			public function setTarget(object:ILinkableObject):void
			{
				if (!parent)
				{
					callLater(setTarget, arguments);
					return;
				}
				
				_weaveDataSource = object as WeaveDataSource;
				if (_weaveDataSource)
				{
					sourceName.text = Weave.root.getName(_weaveDataSource);
					url.text = _weaveDataSource.url.value;
					sourceName.editable = false;
					sourceName.toolTip = lang("Source name is not editable once added to the session. If needed, delete the source and add it again with the new name.")
				}
			}
			
			public function applyChanges():void
			{
				_weaveDataSource.url.value = url.text;
				Alert.show(lang("Changes saved."))
			}
			
		]]>
	</mx:Script>
</mx:VBox>