<!---
	This is a component for setting legend attributes such as number of columns, item reversal, 
	labeling and title functions.

	@author kmonico
-->

<mx:VBox xmlns="weave.ui.*"
		 xmlns:mx="http://www.adobe.com/2006/mxml"
		 creationPolicy="all" clipContent="false"
		 horizontalScrollPolicy="off" verticalScrollPolicy="off"
		 label="{lang('Legend settings')}" width="100%">

		<mx:CheckBox id="chkShowLegendAttrName" label="{lang('Show legend attribute name')}"/>
	<IndentTextInput id="txtLegendAttrNameFunc" label="{lang('Title label function:')}" inputWidth="100%" enabled="{chkShowLegendAttrName.selected}"/>
	
	<mx:CheckBox id="ascendingOrderCheck" label="{lang('Ascending item order')}"/>
	<Indent id="columnsBox" label="{lang('Number of columns')}">
		<mx:NumericStepper id="numColumns" minimum="1"/>
	</Indent>
	<IndentTextInput id="txtLegendValuesFunction" label="{lang('Item label function:')}" inputWidth="100%"/>
</mx:VBox>
